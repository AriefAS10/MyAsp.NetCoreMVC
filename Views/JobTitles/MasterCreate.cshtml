@model DataPribadiNetCoreMVC.Models.JobTitle

@{
    ViewData["Title"] = "MasterCreate";
}

<div class="row">
    <h2 style="text-align:center">Master Create : Add new Job Title</h2>
</div>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form autocomplete="off" asp-action="MasterCreate" class="form-control">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row mb-3">
                <label asp-for="JobCode" class="control-label"></label>
                <div class="form-group col-sm-2">
                    <input id="code" type="text" class="form-control" readonly="readonly" style="text-align:center" value="J" />
                </div>
                <span style="font-size:21px" class="col-sm-1">+</span>
                <div class="form-group col-md">
                    <input type="number" asp-for="JobCode" class="form-control" />
                </div>
                <span asp-validation-for="JobCode" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="JobTitle1" class="control-label"></label>
                <input asp-for="JobTitle1" class="form-control" maxlength="30" />
                <span asp-validation-for="JobTitle1" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DepartmentId" class="control-label"></label>
                <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="width:48%" />
                <a class="btn btn-info pull-right" style="width:48%" asp-action="CreateJB">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
