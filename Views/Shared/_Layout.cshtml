<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Project</title>
    <link rel="stylesheet" href="~/csl/jqueryui/themes/base/jquery-ui.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/datatables/jquery.datatables.css" rel="stylesheet" />
    <link href="~/datatables/jquery.datatables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/csl/Custom.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-main border-bottom box-shadow mb-3">
            <div  class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">My Code</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle text-light" data-bs-toggle="dropdown">Main Master Data</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="DataDBs" asp-action="Index">Candidate</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Employees" asp-action="IndexEmp">Employee</a>
                            </div>
                        </li>                        
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle text-light" data-bs-toggle="dropdown">Additional Master Data</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="JobTitles" asp-action="IndexJB">Job Title</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Under" asp-action="UnderConstruction">Department</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Under" asp-action="UnderConstruction">Country</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="TableView" asp-action="IndexVM">All Table View</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted">
        <div class="container">
            &copy; 2022 - Arief Ageng Susilo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/csl/jquery/jquery.js"></script>
    <script src="~/csl/jqueryui/jquery-ui.js"></script>
    <script src="~/csl/jquery-validate/jquery.validate.js"></script>
    <script src="~/csl/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/dateformat.js"></script>
    <script src="~/js/AutoHideAlert.js"></script>
    <script src="~/datatables/jquery.datatables.js"></script>
    <script src="~/datatables/jquery.datatables.min.js"></script>
    <script src="~/js/popper.js/umd/popper.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
